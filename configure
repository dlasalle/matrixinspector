#!/bin/bash
# Copyright 2014-2017, Dominique LaSalle
#


###############################################################################
# CONFIG VARIABLES ############################################################
###############################################################################

NAME="matrixview"


###############################################################################
# FUNCTIONS ###################################################################
###############################################################################

die() {
  echo "ERROR: ${@}" 1>&2
  exit 1
}

abspath() {
  if [[ "${@::1}" == "/" ]]; then
    echo "${@}"
  else
    echo "${PWD}/${@}"
  fi
}

show_help() {
  echo "USAGE: configure [options]"
  echo ""
  echo "OPTIONS:"
  echo "  --debug"
  echo "    Build with debugging symbols and turn optimizations off."
  echo "  --assert"
  echo "    Build with assertions on."
  echo "  --prefix=<prefix>"
  echo "    Set the install prefix."
  echo "  --shared"
  echo "    Generate a shared version of lib${NAME} instead of a static one."
  echo "  --cc=<cc>"
  echo "    Set the C compiler to use."
  echo "  --cxx=<cxx>"
  echo "    Set the C++ compiler to use."
  echo "  --devel"
  echo "    Turn on compiler warnings."
  echo "  --wxconfig=<wxconfig bin>"
  echo "    Specify the binary of the wxWidgets configuration utility."
  echo "  --test"
  echo "    Enable unit testing."
  echo ""
}


###############################################################################
# OPTION PARSING ##############################################################
###############################################################################


CONFIG_FLAGS="-DCMAKE_VERBOSE_MAKEFILE=1"


# default values
CMAKE="$(which cmake)"
BUILDDIR="build/$(uname -s)-$(uname -m)"
WX_SET=0


# parse arguments
for i in "${@}"; do
  case "${i}" in
    # help
    -h|--help)
    show_help
    exit 0
    ;;
    # debug
    --debug)
    CONFIG_FLAGS="${CONFIG_FLAGS} -DDEBUG=1"
    ;;
    # assert
    --assert)
    CONFIG_FLAGS="${CONFIG_FLAGS} -DASSERT=1"
    ;;
    # prefix
    --prefix=*)
    CONFIG_FLAGS="${CONFIG_FLAGS} -DCMAKE_INSTALL_PREFIX=${i#*=}"
    ;;
    # shared
    --shared)
    CONFIG_FLAGS="${CONFIG_FLAGS} -DSHARED=1"
    ;;
    # devel
    --devel)
    CONFIG_FLAGS="${CONFIG_FLAGS} -DDEVEL=1"
    ;;
    # cc
    --cc=*)
    CONFIG_FLAGS="${CONFIG_FLAGS} -DCMAKE_C_COMPILER=${i#*=}"
    ;;
    # cxx
    --cxx*)
    CONFIG_FLAGS="${CONFIG_FLAGS} -DCMAKE_CXX_COMPILER=${i#*=}"
    ;;
    --wxconfig=*)
    WX_SET=1
    CONFIG_FLAGS="${CONFIG_FLAGS} -DwxWidgets_CONFIG_EXECUTABLE=${i#*=}"
    ;;
    # testing
    --test)
    CONFIG_FLAGS="${CONFIG_FLAGS} -DTESTS=1"
    ;;
    # bad argument
    *)
    die "Unknown option '${i}'"
    ;;
  esac
done


# check if cmake exists
if [[ ! -x "${CMAKE}" ]]; then
  die "Could not find usable cmake: '${CMAKE}'" 
else
  echo "Found CMAKE: '${CMAKE}'"
  echo "--> $("${CMAKE}" --version)"
fi


# clean out build directory if it exists
if [[ -d "${BUILDDIR}" ]]; then
  echo "Removing old build directory '${BUILDDIR}'..."
  rm -rf "${BUILDDIR}"
fi


# create build directory 
mkdir -vp "${BUILDDIR}" || \
    die "Failed to create build directory: '${BUILDDIR}'"


if [[ "${WX_SET}" == "0" ]]; then
  # handle oddly named wx-config
  ODD_WXCONFIG="/usr/bin/wx-config-3.0"
  GTK3_WXCONFIG="/usr/bin/wx-config-gtk3"
  if [[ -e "${ODD_WXCONFIG}" ]]; then
    echo "Using odd wx-config name '${ODD_WXCONFIG}'"
    CONFIG_FLAGS="${CONFIG_FLAGS} -DwxWidgets_CONFIG_EXECUTABLE=${ODD_WXCONFIG}"
  elif [[ -e "${GTK3_WXCONFIG}" ]]; then
    echo "Using gtk3 wx-config name '${GTK3_WXCONFIG}'"
    CONFIG_FLAGS="${CONFIG_FLAGS} -DwxWidgets_CONFIG_EXECUTABLE=${GTK3_WXCONFIG}"
  fi
fi



###############################################################################
# RUN CMAKE ###################################################################
###############################################################################

ROOTDIR="${PWD}"
pushd "${BUILDDIR}"

echo "Calling cmake with arguments '${CONFIG_FLAGS}'"
"${CMAKE}" "${ROOTDIR}" ${CONFIG_FLAGS}
if [[ "$?" != "0" ]]; then
  echo "CMake failed with '$?'" 1>&2
  exit $?
fi

popd


# create proxy makefile
(
echo "#######################################################################"
echo "# Makefile generated by '$0' at $(date)"
echo "# Using flags:"
for d in ${CONFIG_FLAGS}; do
  echo "#	${d}"
done
echo "#######################################################################"
echo ""
echo "all test clean install:"
echo "	make -C ${BUILDDIR} \$@ \$(MAKEFLAGS)"
echo ""
echo "distclean:"
echo "	rm -rvf ${BUILDDIR} Makefile"
echo ""
) > Makefile



